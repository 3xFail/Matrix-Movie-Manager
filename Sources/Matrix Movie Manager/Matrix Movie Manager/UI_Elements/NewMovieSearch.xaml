<Page x:Class="Matrix_Movie_Manager.UI_Elements.NewMovieSearch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Matrix_Movie_Manager.UI_Elements"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1680"
      Title="NewMovieSearch">

    <Border x:Name="outter_boarder" BorderBrush="{DynamicResource BorderColor}" BorderThickness="5">
        <Grid Background="{DynamicResource SecondColor}">
            <Label x:Name="header_label" Content="Find a new movie" FontSize="72" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="105" Margin="370,110,0,0" VerticalAlignment="Top" Width="1055"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="65" Margin="370,220,0,0" TextWrapping="Wrap" FontSize="34" Text="" VerticalAlignment="Top" Width="910" Foreground="{DynamicResource FontColor}" />
            <Button x:Name="search_button" Content="Search" HorizontalAlignment="Left" Height="65" Margin="1280,220,0,0" VerticalAlignment="Top" Width="135" Click="search_button_Click"/>

        </Grid>
    </Border>
</Page>
